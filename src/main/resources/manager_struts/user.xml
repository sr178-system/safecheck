<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="other" extends="managerInterceptor" namespace="/">
	    
	</package>

	<!-- 一个包可以就是一个模块 -->
	<package name="login" extends="myInterceptor" namespace="/">
		<!-- 一个包下可以放这个模块下的所有action -->
		<action name="login" class="com.sr178.safecheck.user.action.AdminLogin">
			<result name="success" type="json">
			  <param name="includeProperties">erroCodeNum</param>
			</result>
		</action>
		
		<action name="uploadFile" class="com.sr178.safecheck.user.action.ImageUploadAction">
			<result name="success" type="json">
			  <param name="includeProperties">erroCodeNum</param>
			</result>
		</action>
	</package>
</struts>
